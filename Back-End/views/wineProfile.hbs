<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.12.1/css/all.css"
      crossorigin="anonymous"
    />
    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/5.0/examples/jumbotron/"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.12.1/css/all.css"
      crossorigin="anonymous"
    />
    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/5.0/examples/navbar-static/"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/wineProfile.css" />
    <title>WineLovers</title>
    <link
      rel="shortcut icon"
      href="https://img.pixers.pics/pho_wat(s3:700/FO/58/19/15/32/700_FO58191532_419f0e8868f635c0fe5a9a9262551231.jpg,467,700,cms:2018/10/5bd1b6b8d04b8_220x50-watermark.png,over,247,650,jpg)/wall-murals-wine-bottle-pouring-to-wine-glass.jpg.jpg"
    />
  </head>
  <body>

    <div class="navbar">
      <a href="/home"><i class="fa fa-fw fa-home"></i> Home</a>
      <a class="active" href="/wines/1"><i class="fas fa-wine-bottle"></i>
        Wines</a>
      <a href="/profile/{{user._id}}"><i class="fas fa-user-alt"></i>
        Profile</a>
      <a href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
      <a href="/history"><i class="fas fa-info-circle"></i> History</a>
      <a href="/addWine"><i class="fas fa-plus-circle"></i> Add Wine</a>
      <a href="/statistic"><i class="fas fa-poll"></i> Statistic</a>
      <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <main>
      <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
          <div class="col-md-10">

            <div class="card card-body">
              <div
                class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row"
              >
                <div class="mr-2 mb-3 mb-lg-0">
                  <img src={{wine.ImageUrl}} style="width: 5%;" alt="" />
                </div>
                <div class="media-body">
                  <h6 class="media-title font-weight-semibold">
                    <a
                      href="/wines/info/{{wine._id}}"
                      data-abc="true"
                    >{{wine.WineName}}</a>
                  </h6>
                  <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                    <li class="list-inline-item"><a
                        href="#"
                        class="text-muted"
                        data-abc="true"
                      >{{wine.Type}}</a></li>
                    <li class="list-inline-item"><a
                        href="#"
                        class="text-muted"
                        data-abc="true"
                      >{{wine.Color}}</a></li>
                    <li class="list-inline-item"><a
                        href="#"
                        class="text-muted"
                        data-abc="true"
                      >{{wine.Year}}</a></li>
                    <br />
                    <li class="list-inline-item"><a
                        href="#"
                        class="text-muted"
                        data-abc="true"
                      >{{wine.Location}} , {{wine.Country}}</a></li>

                  </ul>
                  <p class="mb-3">{{wine.WineDescription}}</p>
                  <ul class="list-inline list-inline-dotted mb-0">
                    <li class="list-inline-item">Winery by
                      <a href="#" data-abc="true">{{wine.Winery}}</a></li>
                    <li class="list-inline-item">Add to
                      <a href="#" data-abc="true">wishlist</a></li>
                  </ul>
                </div>
                <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                  <h3 class="mb-0 font-weight-semibold">{{wine.Price}} $</h3>
                  <div>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                  </div>
                  {{#if avgRating}}
                    {{avgRating}}
                    / 5 Stars
                  {{else}}
                    There not Ratings yet.
                  {{/if}}
                  <div class="text-muted">{{totalComments}} reviews</div>
                  {{!-- <form action="/auth/addToCard" method="POST">
                    <input
                      name="wineId"
                      type="text"
                      value={{this.wine._id}}
                      
                    />

                    <input name="id" type="number" value={{this.id}}  />

                    <input
                      name="amount"
                      placeholder="Choose Amount"
                      type="number"
                      min="0"
                      required
                    />
                    <br />
                    <button
                      type="submit"
                      class="btn btn-warning mt-4 text-white"
                    ><i class="icon-cart-add mr-2"></i> Add to cart</button>
                  </form> --}}
                </div>
                <hr />

                <h5>Add Comment</h5>
                <form action="/auth/addComment" method="POST">
                  <div class="d-flex flex-row align-items-start"><textarea
                      placeholder="Add Comment"
                      name="comment"
                      class="form-control ml-1 shadow-none textarea"
                      required
                    ></textarea></div>
                  <div class="d-flex flex-row align-items-start"><input
                      type="number"
                      min="1"
                      max="5"
                      name="rate"
                      placeholder="Rate Wine"
                      class="form-control ml-1 shadow-none textarea"
                      required
                    /></div>
                  <input type="text" name="userId" value={{user._id}} hidden />
                  <input type="text" name="wineId" value={{wine._id}} hidden />
                  <div class="mt-2 text-right"><button
                      class="btn btn-outline-primary btn-sm ml-1 shadow-none"
                      type="submit"
                    >Post Comment</button></div>

                </form>
                <hr />
                <div
                  class="container d-flex justify-content-center mt-100 mb-100"
                >

                  <div class="card">
                    <div class="card-body">

                      <h6 class="card-subtitle">Latest Comments section by users</h6>

                    </div>
                    <div class="comment-widgets m-b-20">
                      {{#each commentList}}
                        <div class="d-flex flex-row comment-row">

                          <div class="comment-text w-100">
                            <a href="/profilInfo/{{this.user._id}}"><h5
                              >{{this.user.Name}}</h5></a>
                            <div class="comment-footer">
                              <span
                                class="date"
                              >{{this.comment.CommentDate}}</span>
                            </div>
                            <h6 class="m-b-5 m-t-10"><strong
                              >{{this.comment.Comment}}</strong></h6>
                            <p class="m-b-5 m-t-10">Rank :
                              <strong> {{this.comment.Rating}}</strong></p>
                          </div>

                        </div>
                      {{/each}}

                    </div>
                  </div>

                </div>
              </div>
            </div>

          </div>

        </div>

      </div>
    </main>

  </body>
</html>