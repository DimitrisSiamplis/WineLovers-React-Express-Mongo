    <link rel="stylesheet" href="/card.css">
    <title>WineLovers</title>
    <link rel="shortcut icon" href="https://img.pixers.pics/pho_wat(s3:700/FO/58/19/15/32/700_FO58191532_419f0e8868f635c0fe5a9a9262551231.jpg,467,700,cms:2018/10/5bd1b6b8d04b8_220x50-watermark.png,over,247,650,jpg)/wall-murals-wine-bottle-pouring-to-wine-glass.jpg.jpg" />
</head>
<body>
   
    <div class="navbar">
        <a href="/home"><i class="fa fa-fw fa-home"></i> Home</a> 
        <a href="/wines"><i class="fas fa-wine-bottle"></i> Wines</a> 
        <a href="/profile/{{id}}"><i class="fas fa-user-alt"></i> Profile</a> 
        <a class="active"  href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a> 
        <a href="/history"><i class="fas fa-info-circle"></i> History</a> 
        <a href="/addWine"><i class="fas fa-plus-circle"></i> Add Wine</a>
        <a href="/statistic"><i class="	fas fa-poll"></i> Statistic</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
    

<main>
     
  <div class="container mt-5 p-3 rounded cart">
    <div class="row no-gutters">
        
        
         
        <div class="col-md-8">
            
            <div class="product-details mr-2">
                <div class="d-flex flex-row align-items-center"><i class="fa fa-long-arrow-left"></i><button onclick="location.href='/wines/1'" style="padding: 0; border: none; background: none;" class="ml-2">Continue Shopping</button></div>
                <hr>
                <h6 class="mb-0">Shopping cart</h6>
                <div class="d-flex justify-content-between"><span>You have <strong>{{totalcard}}  items</strong> in your cart</span>
                </div>
                {{#each cards}}
                <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                    <div class="d-flex flex-row"> 
                    
                        <a href="/wines/info/{{this.wine._id}}"><img class="rounded"   src="{{this.wine.ImageUrl}}" width="40" ></a>
                        <div class="ml-2"><span class="font-weight-bold d-block">{{this.wine.WineName}}</span><span class="spec">{{this.wine.Type}} , {{this.wine.Color}}</span></div>
                    </div>
                    <div class="d-flex flex-row align-items-center"><span class="d-block">{{this.card.CardDate}}</span> &nbsp; <span class="d-block">{{this.card.Amount}}</span><span class="d-block ml-5 font-weight-bold">{{this.wine.Price}}&nbsp;$</span>
                    
                    <form action="/auth/deleteFromCard" method="POST">
                        <input name="wineId" value="{{this.wine._id}}" required hidden >

                        <button type="submit" class="delete"><i class="fa fa-trash-o ml-3 text-black-50"></i></div></button>
                    </form>
                
                </div>
                {{/each}}
            </div>
        
        </div>
        
        <div class="col-md-4">
            <br><br>
            Continue with Order
            <br>
            <div class="payment-info">
                Personal Details
                <div class="row">
                    <div class="col-md-6" ><label class="credit-card-label">Shipping location</label><input type="text" class="form-control credit-inputs" placeholder="Atiki,Greece"></div>
                    <div class="col-md-6"><label class="credit-card-label">Zip Number</label><input type="text" class="form-control credit-inputs" placeholder="Zip number"></div>
                    <br>
                    <div class="col-md-6"><label class="credit-card-label">Address with Number</label><input type="text" class="form-control credit-inputs" placeholder="Zip number"></div>
                </div>
                <hr class="line">
                Card Details
                <div><label class="credit-card-label">Name on card</label><input type="text" class="form-control credit-inputs" placeholder="Name"></div>
                <div><label class="credit-card-label">Card number</label><input type="text" class="form-control credit-inputs" placeholder="0000 0000 0000 0000"></div>
                <div class="row">
                    <div class="col-md-6"><label class="credit-card-label">Date</label><input type="text" class="form-control credit-inputs" placeholder="12/24"></div>
                    <div class="col-md-6"><label class="credit-card-label">CVV</label><input type="text" class="form-control credit-inputs" placeholder="342"></div>
                </div>
                <hr class="line">
                Sumary
                <div class="d-flex justify-content-between information"><span>Subtotal</span><span>${{total_price}}</span></div>
                <div class="d-flex justify-content-between information"><span>Shipping</span><span>$0.00</span></div>
                <div class="d-flex justify-content-between information"><span>Total(Incl. taxes)</span><span>${{total_price}}</span></div>
                <form action="/auth/addtoHistory" method="POST">
                    <input type="number" name="totalPrice" value="{{total_price}}">
                    <button class="btn btn-primary btn-block d-flex justify-content-between mt-3" type="submit"><span>${{total_price}}</span><span>Checkout<i class="fa fa-long-arrow-right ml-1"></i></span></button>
                </form>
            </div>
        </div>
        
    </div>
</div>
<footer class="pt-3 mt-4 text-muted border-top">
        &copy; 2021 WineLovers Copy rights
  </footer>
</main>

</body>
</html>